<Project InitialTargets="Demo_DecorateToolCommand">
  <Target Name="Demo_DecorateToolCommand" Condition=" '$(MSBuildProjectName)|$(DemoAssemblyType)' == '$(MSBuildProjectName)|DotNetToolAssembly' ">
    <Message Text="Applying Tool Command Name Decorations to $(MSBuildProjectName)"/>
    <PropertyGroup>
      <ToolCommandName Condition=" '$(ToolCommandName)' == '$(MSBuildProjectName)' ">$([System.String]::Copy('$(MSBuildProjectName)').ToLower().Replace('.','-'))</ToolCommandName>
      <PackAsTool>true</PackAsTool>
      <OutputType>Exe</OutputType>
    </PropertyGroup>
  </Target>
</Project>