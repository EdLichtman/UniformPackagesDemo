{
    "$schema": "http://json.schemastore.org/template",
    "author": "Edward Lichtman",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "groupIdentity": "Demo.Templates.PackageLibrary",
    "identity": "Demo.Templates.PackageLibrary",
    "name": "Demo Package Library",
    "description": "The base template for a well-organized package library",
    "shortName": "demo-lib",
    "sourceName": "Demo.Templates.PackageLibrary",
    "preferNameDirectory": false,
    "defaultName": "Demo.PackageLibrary",
    "sources": [{
        "source": "../Demo.PackageLibrary/",
        "modifiers": [{
            "exclude": [
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                "**/[Pp]ackages/**",
                "**/.template.config/**/*",
                "**/*.filelist",
                "**/*.user",
                "**/*.lock.json",
                "**/.vs/**",
                "**/.idea/**",
                "**/.nuke/temp/**",
                "*.sln"
            ]
        }]
    }]
}