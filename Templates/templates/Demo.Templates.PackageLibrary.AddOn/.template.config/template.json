{
    "$schema": "http://json.schemastore.org/template",
    "author": "Edward Lichtman",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "groupIdentity": "Demo.Templates.PackageLibrary.AddOn",
    "identity": "Demo.Templates.PackageLibrary.AddOn",
    "name": "Demo Package Library AddOn",
    "description": "The base template for a well-organized package library without tests",
    "shortName": "demo-lib-addon",
    "sourceName": "Demo.Templates.PackageLibrary",
    "preferNameDirectory": false,
    "defaultName": "Demo.PackageLibrary.AddOn",
    "sources": [{
        "source": "../Demo.PackageLibrary/",
        "modifiers": [{
            "exclude": [
                "**/tests/**",
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                "**/[Pp]ackages/**",
                "**/.template.config/**/*",
                "**/*.filelist",
                "**/*.user",
                "**/*.lock.json",
                "**/.vs/**",
                "**/.idea/**",
                "**/.nuke/**",
                "Directory.Build.props",
                "Directory.Build.targets",
                "Directory.Packages.props",
                "*.sln"
            ]
        }]
    }]
}